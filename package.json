  "jest": {
    "verbose": true,
    "preset": "ts-jest",
    "testRegex": ".*\\.(spec|test)\\.ts$",
    "transform": {
      ".+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "node"
    ],
    "setupFiles": [
      "<rootDir>/tests/jest-setup.ts"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "moduleNameMapper": {
      "@/(.*)": "<rootDir>/$1",
      "@src/(.*)": "<rootDir>/src/$1",
      "@tests/(.*)": "<rootDir>/tests/$1"
    }
  }
}